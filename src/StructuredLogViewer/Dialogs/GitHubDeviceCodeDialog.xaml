<Window x:Class="StructuredLogViewer.Dialogs.GitHubDeviceCodeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GitHub Authentication Required"
        Width="500" Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#2D2D30"
        Foreground="#F1F1F1">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1C97EA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Authenticate with GitHub Copilot"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Instructions -->
        <TextBlock Grid.Row="1"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15">
            To use GitHub Copilot, please complete the authentication process:
        </TextBlock>

        <!-- Step 1: Code -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="1. Copy this code:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Border Background="#1E1E1E"
                    BorderBrush="#3F3F46"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="userCodeText"
                               FontFamily="Consolas"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#569CD6"
                               VerticalAlignment="Center"/>
                    <Button Grid.Column="1"
                            Content="Copy"
                            Click="CopyCode_Click"
                            Padding="10,5"/>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Step 2: URL -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="2. Open this URL and enter the code:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Border Background="#1E1E1E"
                    BorderBrush="#3F3F46"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="verificationUrlText"
                               FontFamily="Consolas"
                               Foreground="#4EC9B0"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"/>
                    <Button Grid.Column="1"
                            Content="Open Browser"
                            Click="OpenBrowser_Click"
                            Padding="10,5"/>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Status -->
        <TextBlock Grid.Row="4"
                   x:Name="statusText"
                   Text="Waiting for authentication..."
                   FontStyle="Italic"
                   Foreground="#CCCCCC"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

        <!-- Close button -->
        <Button Grid.Row="5"
                Content="Close"
                HorizontalAlignment="Center"
                Click="Close_Click"
                MinWidth="100"
                Margin="0,10,0,0"/>
    </Grid>
</Window>

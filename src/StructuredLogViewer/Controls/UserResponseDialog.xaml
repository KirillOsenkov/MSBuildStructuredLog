<Window x:Class="StructuredLogViewer.Controls.UserResponseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LLM Needs Clarification"
        Width="500"
        Height="300"
        Background="{DynamicResource Theme_Background}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Question -->
        <TextBlock Grid.Row="0" 
                   Text="The LLM needs clarification:"
                   FontWeight="Bold" 
                   Margin="0,0,0,10"
                   Foreground="{DynamicResource Theme_Foreground}"/>

        <!-- Options and Input Area -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Options list (if provided) -->
            <ListBox x:Name="optionsListBox"
                     Grid.Row="0"
                     Margin="0,0,0,10"
                     MaxHeight="120"
                     Visibility="Collapsed"
                     Background="{DynamicResource Theme_Background}"
                     Foreground="{DynamicResource Theme_Foreground}"
                     SelectionChanged="OptionsListBox_SelectionChanged"/>

            <!-- Response input -->
            <TextBox x:Name="responseTextBox"
                     Grid.Row="1"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Padding="4"
                     Background="{DynamicResource Theme_Background}"
                     Foreground="{DynamicResource Theme_Foreground}"
                     ToolTip="Enter your response or select an option above"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="OK"
                    IsDefault="True"
                    Click="OkButton_Click"
                    MinWidth="75" 
                    MinHeight="23" 
                    Margin="0,0,10,0"
                    Background="{DynamicResource Theme_Background}"
                    Foreground="{DynamicResource Theme_Foreground}"/>
            <Button Content="Cancel"
                    IsCancel="True"
                    MinWidth="75" 
                    MinHeight="23"
                    Background="{DynamicResource Theme_Background}"
                    Foreground="{DynamicResource Theme_Foreground}"/>
        </StackPanel>
    </Grid>
</Window>

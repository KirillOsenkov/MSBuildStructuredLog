            <DataTemplate x:Key="SourceFileTabHeaderTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Button Name="HideButton"
                            Width="16"
                            Height="16"
                            Classes="close"
                            Grid.Column="1"
                            Command="{Binding Close}"
                            VerticalAlignment="Center"
                            Margin="4,2,-2,0"
                            ToolTip.Tip="Close">
                    </Button>
                    <TextBlock MinWidth="50"
                               Text="{Binding Header}"
                               VerticalAlignment="Center" />
                </Grid>
            </DataTemplate>

